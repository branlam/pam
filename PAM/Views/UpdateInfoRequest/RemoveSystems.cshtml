@model Request
@{
  ViewData["Title"] = "Remove Systems";
  ViewData["id"] = Model.RequestId;
  var systemAccesses = (List<PAM.Models.SystemAccess>)ViewData["systemAccesses"];
}
@section StyleSheets{
  <link rel="stylesheet" href="~/css/progressbar.css" />
  <link rel="stylesheet" href="~/lib/bootstrap-table/bootstrap-table.min.css" />
}

@section Scripts {
  <script src="~/lib/core-js/core.min.js"></script>
  <script src="~/lib/bootstrap-table/bootstrap-table.min.js"></script>
  <script>
    $("#checkboxForm input[type=checkbox]").on("change", function () {
      if ($("input[type=checkbox]").is(":checked")) {
        $("#next").prop("disabled", false);
        $("#saveDraft").prop("disabled", false);
      }
      else {
        $("#next").prop("disabled", true);
        $("#saveDraft").prop("disabled", true);
      }
    })
    $("#saveDraft").click(function () {
      var form = $(this).parents("form:first");
      form.append("<input type='hidden' name='saveDraft' value='true'>");
      form.submit();
    });
  </script>
}

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a asp-controller="Request" asp-action="MyRequests">My Requests</a></li>
    <li class="breadcrumb-item active" aria-current="page">Request #@ViewData["id"]</li>
  </ol>
</nav>

@* *** TODO ***: Need to fix progress bar since different per request *@
<partial name="../Shared/_ProgressBar1.cshtml" />

<form asp-action="RemoveSystems" method="post" id="checkboxForm">
  <div class="mb-3">
    <div class="row">
      <div class="col-md-9">
        <p class="float-left mt-2">Please select system(s) you currently have access to, to remove:</p>
        @* For some odd reason, the script to enable/disable only works when table tag below isnt closed *@
        <table id="table" data-toggle="table"
          <thead>
            <tr>
              <th></th>
              <th class="d-md-table-cell" data-sortable="true" scope="col">Id</th>
              <th class="d-md-table-cell" data-sortable="true" scope="col">Name</th>
              <th class="d-md-table-cell" scope="col">Description</th>
            </tr>
          </thead>
          <tbody>
            @foreach (var sa in systemAccesses)
            {
              var label = "system" + sa.SystemId;
              <tr>
                <td class="d-none d-md-table-cell">
                  <div class="custom-control custom-checkbox" id="selectSystems">
                    <input type="checkbox" class="custom-control-input" name="removeSystems" id="@label" value="@sa.SystemId" />
                    <label class="custom-control-label" for="@label"></label>
                  </div>
                </td>
                <td class="d-none d-md-table-cell">@sa.SystemId</td>
                <td class="d-none d-md-table-cell">@sa.System.Name</td>
                <td class="d-none d-md-table-cell">@sa.System.Description</td>
              </tr>
            }
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="form-row">
    <div class="col-4">
      <button id="saveDraft" class="btn btn-secondary" disabled>Save Draft</button>
    </div>
    <div class="col-8 text-right">
      <a asp-controller="RemoveAccessRequest" asp-action="UnitSelection" asp-route-id="@Model.RequestId" class="btn btn-secondary">Previous</a>
      <button id="next" type="submit" class="btn btn-primary ml-3" disabled>Next</button>
    </div>
  </div>
</form>
