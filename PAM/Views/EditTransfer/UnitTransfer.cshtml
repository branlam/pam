@model Request
@{
     ViewData["Title"] = "Unit Selection";
     ViewData["id"] = Model.RequestId;
     var temp = (List<SystemAccess>)ViewData["SystemAccess"];
}
@section StyleSheets{
  <link rel="stylesheet" href="~/css/progressbar.css" />
}
@section Scripts {
  <script src="~/lib/bootstrap-treeview/bootstrap-treeview.min.js"></script>
  <script>
  $(function(){
    var defaultSystems = @Model.RequestedFor.UnitId;
        $("#unitId").val(defaultSystems);
        $("#next").prop("disabled", false);
        $("#saveDraft").prop("disabled", false);
        $.ajax({
          url: "/api/portfolio/" + defaultSystems,
          success: function (data) {
            $("#systems").empty();
            data.forEach(function (system) {
              if (system.systemId) {
                $("#system" + system.systemId).prop("checked", true);
                $("#system" + system.systemId).prop("disabled", true);
              }
              $("#systems").append("<tr><td>"
                + system.systemId + "</td><td>"
                + system.name + "</td></tr>");
            });
          }
    })
    $("#saveDraft").click(function () {
      var form = $(this).parents("form:first");
      form.append("<input type='hidden' name='saveDraft' value='true'>");
      form.submit();
    });
  });
  </script>
}

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a asp-controller="Request" asp-action="MyRequests">My Requests</a></li>
    <li class="breadcrumb-item active" aria-current="page">Request #@ViewData["id"]</li>
  </ol>
</nav>

<partial name="../Shared/_ProgressBar1.cshtml" />

<form asp-action="SelectUnit" method="post">
  <div class="row">
    <p>Please select your unit/job function to transfer from:</p>
    <div class="col-12 col-md-6 mb-3">
      <div class="card-body">
        <div class="row">
          <div class="form-group col-md-6">
            <label>Bureau</label>
            <span class="form-control">@Model.RequestedFor.Bureau.Description</span>
          </div>
          <div class="form-group col-md-6">
            <label>Unit / Job Function</label>
            <span class="form-control">@Model.RequestedFor.Unit.Name</span>
          </div>
        </div>
        <div class="row">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col" class="nowrap">In Portfolio</th>
              </tr>
            </thead>
            <tbody>
              @foreach (var sa in temp)
              {
                <tr>
                  <td>@sa.System.SystemId</td>
                  <td>@sa.System.Name</td>
                  <td>@sa.InPortfolio</td>
                </tr>
              }
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <div class="form-row">
    <div class="col-4">
      <button id="saveDraft" class="btn btn-secondary" disabled>Save Draft</button>
    </div>
    <div class="col-8 text-right">
      <a asp-action="RequesterInfo" asp-route-id="@Model.RequestId" class="btn btn-secondary">Previous</a>
      <button id="next" type="submit" class="btn btn-primary ml-3" disabled>Next</button>
    </div>
  </div>
  <input id="unitId" name="unitId" type="hidden" value="@Model.RequestedFor.UnitId" />
</form>
