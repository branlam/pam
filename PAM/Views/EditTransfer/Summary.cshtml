@model Request
@{
  ViewData["Title"] = "Transfer Summary";
  ViewData["id"] = Model.RequestId;
}
@section StyleSheets{
  <link rel="stylesheet" href="~/css/progressbar.css" />
}
@section Scripts {
  <script>
  $(function(){
    var page ='@ViewData["Title"]';
    $("li[data-title='" + page + "']").addClass("active");
  });
  </script>
}

<partial name="../Shared/_Summary.cshtml" />

<div class="card">
  <div class="card-header">
    Systems Requested
    <a class="float-right" asp-action="UnitSelection" asp-route-id="@ViewData["id"]"><i class="fas fa-edit"></i></a>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="form-group col-md-6">
        <div class="row">
          <div class="col-md-12">
            <label>Bureau</label>
            <span class="form-control">@Model.RequestedFor.Bureau.Description</span>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <label>Unit / Job Function</label>
            <span class="form-control">@Model.RequestedFor.Unit.Name</span>
          </div>
        </div>
      </div>
      <div class="form-group col-md-6">
        <div class="row">
          <div class="col-md-12">
            <label>Bureau</label>
            <span class="form-control">@Model.RequestedFor.Bureau.Description</span>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <label>Unit / Job Function</label>
            <span class="form-control">@Model.RequestedFor.Unit.Name</span>
          </div>
        </div>
        <div class="form-group col-md-6">
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4">
        <div class="card">
          <h5 class="card-header text-center">Added Systems</h5>
          <table class="table">
            <thead>
              <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
              </tr>
            </thead>
            <tbody>
              @foreach (var requestedSystem in Model.Systems)
              {
                @if (requestedSystem.InPortfolio)
                {
                  <tr>
                    <td>@requestedSystem.System.SystemId</td>
                    <td>@requestedSystem.System.Name</td>
                  </tr>
                }
              }
            </tbody>
          </table>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card">
          <h5 class="card-header text-center">Removed Systems</h5>
          <table class="table">
            <thead>
              <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
              </tr>
            </thead>
            <tbody>
              @foreach (var requestedSystem in Model.Systems)
              {
                @if (requestedSystem.AccessType == SystemAccessType.Remove)
                {
                  <tr>
                    <td>@requestedSystem.System.SystemId</td>
                    <td>@requestedSystem.System.Name</td>
                  </tr>
                }
              }
            </tbody>
          </table>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card">
          <h5 class="card-header text-center">Kept Systems</h5>
          <table class="table">
            <thead>
              <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
              </tr>
            </thead>
            <tbody>
              @foreach (var requestedSystem in Model.Systems)
              {
                @if (!requestedSystem.InPortfolio)
                {
                  <tr>
                    <td>@requestedSystem.System.SystemId</td>
                    <td>@requestedSystem.System.Name</td>
                  </tr>
                }
              }
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="card">
  <div class="card-header">
    Additional Information
    <a class="float-right" asp-action="AdditionalInfo" asp-route-id="@ViewData["id"]"><i class="fas fa-edit"></i></a>
  </div>
  <div class="card-body">
    <div class="row mb-2">
      <div class="col-md-4">
        @if (Model.IsContractor)
        {
          <i class="far fa-check-square"></i>
        }
        else
        {
          <i class="far fa-square"></i>
        }
        Contractor
      </div>
      <div class="col-md-4">
        @if (Model.IsHighProfileAccess)
        {
          <i class="far fa-check-square"></i>
        }
        else
        {
          <i class="far fa-square"></i>
        }
        High Profile
      </div>
      <div class="col-md-4">
        @if (Model.IsGlobalAccess)
        {
          <i class="far fa-check-square"></i>
        }
        else
        {
          <i class="far fa-square"></i>
        }
        Global Access
      </div>
    </div>
    <div class="row">
      <div class="form-group col-md-4">
        <label>Caseload Type</label>
        <span class="form-control">@Model.CaseloadType</span>
      </div>
      <div class="form-group col-md-4">
        <label>Caseload Function</label>
        <span class="form-control">@Model.CaseloadFunction</span>
      </div>
      <div class="form-group col-md-4">
        <label>Caseload Number</label>
        <span class="form-control">@Model.CaseloadNumber</span>
      </div>
    </div>
  </div>
</div>

<div class="card">
  <div class="card-header">
    Signature(s) Required
    <a class="float-right" asp-action="Signatures" asp-route-id="@ViewData["id"]"><i class="fas fa-edit"></i></a>
  </div>
  <div class="card-body">
    @foreach (var review in Model.Reviews)
    {
      <div class="row">
        <div class="form-group col">
          <label>@review.ReviewerTitle</label>
          <span class="form-control">@review.Reviewer.Name</span>
        </div>
      </div>
    }
  </div>
</div>

<div class="row mt-3">
  <div class="col-6">
    <a asp-controller="Request" asp-action="MyRequests" class="btn btn-secondary">Back to Drafts</a>
  </div>
  <div class="col-6 text-right">
    <a asp-controller="Request" asp-action="SubmitRequest" asp-route-id="@ViewData["id"]" class="btn btn-primary">Submit Request</a>
  </div>
</div>
