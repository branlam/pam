<p style="font-size: 40px;" class="text-center">New Registration</p>
<hr>
<div class="progressbar-container">
  <ul class="progressbar">
    <a asp-action="CreateRequester"><li class="step">Self or For</li></a>
    <a asp-action="SelfInfo"><li class="step">Requester(s) Information</li></a>
    <a asp-action="RequestType"><li class="step">Request Type</li></a>
    <a asp-action=""><li class="step">Unit Selection</li></a>
    <a asp-action=""><li class="step">System Selection</li></a>
    <a asp-action="RequestInfo"><li class="step">Request Information</li></a>
    <a asp-action="Supervisors"><li class="step">Supervisors</li></a>
    <a asp-action="Review"><li class="step">Review</li></a>
  </ul>
</div>
<hr>

<script>
  function stepIndicate(n) {
    let x = document.getElementsByClassName("step");
    let stepTitle = '@ViewData["Title"]';
    switch (stepTitle) {
      case "New Request":
        x[0].className += " active";
        break;
      case "Requester Information":
        x[1].className += " active";
        break;
      case "Request Type":
        x[2].className += " active";
        break;
      case "Unit Selection":
        x[3].className += " active";
        break;
      case "System Selection":
        x[4].className += " active";
        break;
      case "Request Information":
        x[5].className += " active";
        break;
      case "Supervisors":
        x[6].className += " active";
        break;
      case "Review":
        x[7].className += " active";
        break;
      default:
        break;
    }
  }
</script>
