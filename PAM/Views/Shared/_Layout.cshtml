@{ var identity = (ClaimsIdentity)User.Identity; }
<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" href="~/lib/bootswatch/cerulean/bootstrap.min.css" />
  <link rel="stylesheet" href="~/css/styles.css">
  @RenderSection("StyleSheets", required: false)
  <title>PAM - @ViewData["Title"]</title>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
    <a href="/" class="navbar-brand" style="color:gold;">Probation Access Manager</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="requestsMenu" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Requests</a>
          <div class="dropdown-menu" aria-labeledby="requestsMenu">
            <a class="dropdown-item" href="/Request/Self">Your Requests</a>
            <a class="dropdown-item" href="/Request/ReviewRequests">Review Requests</a>
            <a class="dropdown-item" href="/Request/ProcessRequests">Process Requests</a>
            <a class="dropdown-item" href="/Request/AllRequests">All Requests</a>
          </div>
        </li>
        <li class="nav-item">
          <a class="nav-link " href="#">Users</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Reports</a>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="organizationMenu" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Organization</a>
          <div class="dropdown-menu" aria-labeledby="navDropDownMenu">
            <a asp-controller="Location" asp-action="Locations" class="dropdown-item">Locations</a>
            <a asp-controller="Bureau" asp-action="Bureaus" class="dropdown-item">Bureaus</a>
            <a asp-controller="Unit" asp-action="SelectUnit" class="dropdown-item">Units</a>
            <a asp-controller="System" asp-action="Systems" class="dropdown-item">Systems</a>
          </div>
        </li>
        <li class="nav-item">
          <a class="nav-link" asp-controller="Account" asp-action="Logout">Logout</a>
        </li>
      </ul>
      <span style="color:white;" class="d-none d-lg-inline">Welcome, @identity.GetClaim(ClaimTypes.GivenName) @identity.GetClaim(ClaimTypes.Surname)!</span>
    </div>
  </nav>
  <!-- Main Content -->
  <div class="container">
    <div class="main-content">
      @RenderBody()
    </div>
  </div>
  <!-- Footer -->
  <footer>&copy; Copyright 2018-2019. Los Angeles County. </footer>
  <!-- Scripts -->
  <script src="~/lib/jquery/jquery.min.js"></script>
  <script src="~/lib/twitter-bootstrap/js/bootstrap.min.js"></script>
  @RenderSection("Scripts", required: false)
</body>
</html>
