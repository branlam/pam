@model Form
@{
  var systemForms = (List<PAM.Models.SystemForm>)ViewData["Systems"];
}
@section Scripts{
  <script>
    function confirmRemoval() {
      var msg = "Are you sure you want to remove this Form?";
      if (confirm(msg))
        window.location.href = "@Context.Request.PathBase/Form/RemoveForm/@Model.FormId";
    }
  </script>
}

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item active" aria-current="page"> @Model.Name</li>
  </ol>
</nav>

<form method="post" enctype="multipart/form-data">
  <div class="form-row">
    <div class="form-group col-md-6">
      <label asp-for="Name" class="form-label">Name</label>
      <input asp-for="Name" type="text" class="form-control" required>
    </div>
    <div class="form-group col-md-6">
      <label asp-for="Description">Description</label>
      <input asp-for="Description" type="text" class="form-control" required>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <label asp-for="DisplayOrder">Display Order</label>
      <input asp-for="DisplayOrder" type="text" class="form-control" required>
    </div>
  </div>

  <div class="form-group">
    <label for="uploadFile">Re-Upload File</label>
    <input asp-for="File" type="file" name="file" class="form-control-file">
  </div>

  <div class="form-row">
    <div class="form-check form-check-inline">
      <input asp-for="ForEmployeeOnly" class="form-check-input" type="checkbox">
      <label asp-for="ForEmployeeOnly" class="form-check-label">Employees Only</label>
    </div>
    <div class="form-check form-check-inline">
      <input asp-for="ForContractorOnly" class="form-check-input" type="checkbox">
      <label asp-for="ForContractorOnly" class="form-check-label">Contractors Only</label>
    </div>
  </div>


  <div class="form-row">
    <div class="col-6">
      <a href="javascript:confirmRemoval()" class="btn btn-danger">Remove Form</a>
    </div>
    <div class="col-6 text-right">
      <button type="submit" class="btn btn-primary">Save</button>
    </div>
  </div>
</form>
