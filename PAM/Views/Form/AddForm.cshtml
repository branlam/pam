@model Form
@{
  ViewData["Title"] = "AddForm";
}
@section Scripts{
  <script src="~/lib/bootstrap-3-typeahead/bootstrap3-typeahead.min.js"></script>
  <script src="~/lib/typeahead.js/bloodhound.js"></script>
}

  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a asp-action="ProcessingUnits">Processing Units</a></li>
      <li class="breadcrumb-item active" aria-current="page">Add Processing Unit</li>
    </ol>
  </nav>

  <form method="post">
    <div class="form-row">
      <div class="form-group col-md-6">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" type="text" class="form-control" required>
      </div>
      <div class="form-group col-md-6">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" type="text" class="form-control" required>
      </div>
    </div>

    <div class="form-row">
      <div class="form-group col-md-6">
        <label asp-for="DisplayOrder">Display Order</label>
        <input asp-for="DisplayOrder" type="text" class="form-control" required>
      </div>
    </div>

    <div class="form-row">
      <div class="form-check form-check-inline">
        <input asp-for="ForEmployeeOnly" class="form-check-input" type="checkbox">
        <label asp-for="ForEmployeeOnly" class="form-check-label">Employees Only</label>
      </div>
      <div class="form-check form-check-inline">
        <input asp-for="ForContractorOnly" class="form-check-input" type="checkbox">
        <label asp-for="ForContractorOnly" class="form-check-label">Contractors Only</label>
      </div>
    </div>

    <div class="form-row">
      <div class="col text-right">
        <button type="submit" class="btn btn-primary">Add</button>
      </div>
    </div>
  </form>
