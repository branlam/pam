          </table>
        </div>
      </div>*@
      <div class="col-md-9">
        <p class="float-left mt-2">Please select the system(s) to remove:</p>
        <table id="table"
               data-toggle="table"
               data-pagination="true"
               data-page-size="15"
               data-maintain-selected="true"
               data-search="true"
               data-search-align="right">
          <thead>
            <tr>
              <th></th>
              <th class="d-md-table-cell" data-sortable="true" scope="col">Id</th>
              <th class="d-md-table-cell" data-sortable="true" scope="col">Name</th>
              <th class="d-md-table-cell" scope="col">Description</th>
            </tr>
          </thead>
          <tbody>
            @foreach (var sa in systemAccesses)
            {
              var label = "system" + sa.SystemId;
              <tr>
                <td class="d-none d-md-table-cell">
                  <div class="custom-control custom-checkbox" id="selectSystems">
                    <input type="checkbox" class="custom-control-input" name="removeSystems" id="@label" value="@sa.SystemId" />
                    <label class="custom-control-label" for="@label"></label>
                  </div>
                </td>
                <td class="d-none d-md-table-cell">@sa.SystemId</td>
                <td class="d-none d-md-table-cell">@sa.System.Name</td>
                <td class="d-none d-md-table-cell">@sa.System.Description</td>
              </tr>
            }
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="form-row">
    <div class="col-4">
      <button id="saveDraft" class="btn btn-secondary" disabled>Save Draft</button>
    </div>
    <div class="col-8 text-right">
      <a asp-controller="RemoveAccessRequest" asp-action="UnitSelection" asp-route-id="@Model.RequestId" class="btn btn-secondary">Previous</a>
