@model IEnumerable<PAM.Models.Bureau>

@{
    ViewData["Title"] = "Index";
}

<h2>Bureaus</h2>

<p>
    <a asp-action="CreateBureau">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)   <td> <a asp-action="Units" asp-route-id="@item.BureauId">More</a> </td>
                </td>
                
                <td>
                    <a asp-action="EditBureau" asp-route-id="@item.BureauId">Edit</a> |
                    <a asp-action="DetailsBureau" asp-route-id="@item.BureauId">Details</a> |
                    <a asp-action="DeleteBureau" asp-route-id="@item.BureauId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
