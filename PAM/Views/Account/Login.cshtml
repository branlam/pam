@{
    ViewData["Title"] = "Login";
    Layout = "_LoginLayout";
}
<body>
  <div class="bg-display">
    <div class="login-container">
      <div class="login-form">
        <div class="logo">
          <img src="~/Images/ProbBadge.png" alt="LA COUNTY PROBATION LOGO" />

        </div>
        <span class="login-title"> Probation Access Manager </span>

        <form asp-controller="Account" asp-action="Login" method="post">
          <div class="input-container">
            <input name="username" class="input100" placeholder="Username" data-val-required="Username is required." />
          </div>
          <div class="input-container">
            <input name="password" class="input100" type="password" data-val-required="Password is required." placeholder="Password" />
          </div>
          <button type="submit" class="btn btn-info btn-block" value="submit" style="margin-top:40px;"> Login </button>
        </form>
        @if (Model != null)
        {
          <p class="text-danger">@Model.Message</p>
        }
      </div>
    </div>
  </div>
  <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.2.0.min.js"></script>
  <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
  <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>
</body>
