@model EmployeeBindingModel
@{
  ViewData["Title"] = "Edit Profile";
}
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a asp-action="ViewProfile">@Model.Name's Profile</a></li>
    <li class="breadcrumb-item active" aria-current="page">Edit</li>
  </ol>
</nav>

<form method="post">
  <div class="form-row">
    <div class="form-group col">
      <label>Name</label>
      <span class="form-control">@Model.Name</span>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label>Email</label>
      <span class="form-control">@Model.Email</span>
    </div>
    <div class="form-group col-md-6">
      <label asp-for="Title">Title</label>
      <input asp-for="Title" type="text" class="form-control">
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label asp-for="Department">Department</label>
      <input asp-for="Department" type="text" class="form-control">
    </div>
    <div class="form-group col-md-6">
      <label asp-for="Service">Service</label>
      <input asp-for="Service" type="text" class="form-control">
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label asp-for="Address">Address</label>
      <input asp-for="Address" type="text" class="form-control">
    </div>
    <div class="form-group col-md-6">
      <label asp-for="City">City</label>
      <input asp-for="City" type="text" class="form-control">
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label asp-for="State">State</label>
      <input asp-for="State" type="text" class="form-control">
    </div>
    <div class="form-group col-md-6">
      <label asp-for="Zip">Zip Code</label>
      <input asp-for="Zip" type="text" class="form-control">
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label asp-for="Phone">Phone</label>
      <input asp-for="Phone" type="text" class="form-control">
    </div>
    <div class="form-group col-md-6">
      <label asp-for="CellPhone">Cell Phone</label>
      <input asp-for="CellPhone" type="text" class="form-control">
    </div>
  </div>
  <div class="form-row">
    <div class="col text-right">
      <button id="next" type="submit" class="btn btn-primary">Save</button>
    </div>
  </div>
</form>
